{%- style -%}
	@media screen and (max-width: 749px) {
        #ImageSwitcher-{{ section.id }} {
            padding-left: {{ section.settings.mobile_padding_left }}px;
            padding-right: {{ section.settings.mobile_padding_right }}px;
            padding-top: {{ section.settings.mobile_padding_top }}px;
            padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
        }
  	}

  	@media screen and (min-width: 750px) {
        #ImageSwitcher-{{ section.id }} {
			padding-top: {{ section.settings.desktop_padding_top }}px;
            padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
			max-width: {{ section.settings.desktop_medium_size_max_width }}%;
			margin: auto;
        }
  	}

  	@media screen and (min-width: 1450px) {
        #ImageSwitcher-{{ section.id }} {
			padding-top: {{ section.settings.desktop_padding_top }}px;
            padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
			max-width: {{ section.settings.desktop_large_size_max_width }}%;
			margin: auto;
        }
  	}
{%- endstyle -%}

<div id="ImageSwitcher-{{ section.id }}">
  <picture>
    <source media="(max-width:350px)" srcset="{{ section.settings.mobile_image | image_url: width: 350 }}">
    <source media="(max-width:749px)" srcset="{{ section.settings.mobile_image | image_url: width: 750 }}">
    <source media="(min-width:750px)" srcset="{{ section.settings.desktop_image | image_url: width: 1780 }}">
    <img 
         src="{{ section.settings.desktop_image | image_url: width: 1500 }}" 
         style="width: 100%;" 
         loading="lazy"
         alt="{{ section.settings.desktop_image.alt | escape }}"
         >
  </picture>
</div>

{% schema %}
  {
    "name": "Image switcher",
    "settings": [
	    {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image"
        },

        {
          "type": "number",
          "id": "desktop_padding_top",
          "label": "Desktop padding top"
        },
		{
          "type": "number",
          "id": "desktop_padding_bottom",
          "label": "Desktop padding bottom"
        },
        {
          "type": "number",
          "id": "desktop_medium_size_max_width",
          "label": "Desktop medium size max width"
        },
        
        {
          "type": "number",
          "id": "desktop_large_size_max_width",
          "label": "Desktop large size max width"
        },

        {
          "type": "number",
          "id": "mobile_padding_top",
          "label": "Mobile padding top"
        },
		{
          "type": "number",
          "id": "mobile_padding_bottom",
          "label": "Mobile padding bottom"
        },
        {
          "type": "number",
          "id": "mobile_padding_left",
          "label": "Mobile padding left"
        },
        {
          "type": "number",
          "id": "mobile_padding_right",
          "label": "Mobile padding right"
        }
    ],
    "presets": [
        {
        "name": "Image switcher",
        "blocks": []
        }
    ]
  }
{% endschema %}

