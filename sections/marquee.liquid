{% assign image_display_width = section.settings.image_height | times: section.settings.image.aspect_ratio | floor %}
{% assign image_requested_height = section.settings.image_height | times: 1.5 %}

{%- style -%}
  .marquee-{{ section.id }}-container {
    overflow: hidden;
    width: 100%;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .marquee-{{ section.id }}-container {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .marquee-{{ section.id }}-sliding-background {
    display: block !important;
    background: url("{{ section.settings.image | image_url: height: image_requested_height }}") repeat-x;
    background-size: contain;
    width: {{ image_display_width | times: 2 }}px;
    height: {{ section.settings.image_height }}px;

    animation-name: marquee-{{ section.id }}-slide;
    animation-duration: {{ section.settings.animation_duration }}s;
    animation-delay: {{ section.settings.animation_delay }}s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .marquee-{{ section.id }}-sliding-background.paused {
    animation-play-state: paused;
  }

  @keyframes marquee-{{ section.id }}-slide {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(-{{ image_display_width }}px, 0, 0);
    }
  }
{%- endstyle -%}

{% javascript %}
  $(".marquee-container").click(function() {
    $(this).find(".marquee-background").toggleClass("paused");
  });
  $(document).ready(function() {
    
  });
{% endjavascript %}

<div style="background-color: {{ section.settings.section_background }};">
  <div class="page-width isolate" style="background: {{ section.settings.background }}">
    <div class="marquee-{{ section.id }}-container marquee-container">
      <div class="marquee-{{ section.id }}-sliding-background marquee-background"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Marquee",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "number",
      "id": "image_height",
      "label": "Image height",
      "default": 600
    },
    {
      "type": "range",
      "id": "animation_duration",
      "min": 5,
      "max": 90,
      "step": 5,
      "default": 30,
      "label": "Animation duration (seconds)"
    },
    {
      "type": "range",
      "id": "animation_delay",
      "min": 1,
      "max": 30,
      "step": 1,
      "default": 1,
      "label": "Animation delay (seconds)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_background",
      "id": "section_background",
      "label": "Section Background",
      "default": "transparent"
    },
    {
      "type": "textarea",
      "id": "background",
      "label": "The background for the marquee",
      "info": "The string is set to css background.",
      "default": "transparent"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Marquee",
      "blocks": []
    }
  ]
}
{% endschema %}
